<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.eliseylobanov.translator.ui.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_showDetail"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.eliseylobanov.translator.ui.fragments.DetailsFragment"
        android:label="DetailsFragment" >
        <argument
            android:name="word"
            app:argType="com.eliseylobanov.translator.model.entities.DataModel"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.eliseylobanov.translator.ui.fragments.HistoryFragment"
        android:label="HistoryFragment" />
</navigation>